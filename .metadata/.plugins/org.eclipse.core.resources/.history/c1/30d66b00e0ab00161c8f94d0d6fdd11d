		Book b10 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b11 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b12 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b13 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b14 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b15 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b16 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
		Book b17 = new Book("a0003", "기초 EJB", "김성박", 25000, 2000, "dea", 8);
