package step_H;

import java.util.Random;
import java.util.Scanner;

public class H03 {
	void run(){
		Scanner s = new Scanner(System.in);
		Random r = new Random();
		int[] lotto_com = new int[6];
		int[] lotto_user = new int[6];
		int user;
		int i;
		int count;
		int match_count;
		for(i = 0; i < lotto_com.length; i++){
			lotto_com[i] = r.nextInt(45) + 1;
			for(count = 0; count < i; count++){
				if(lotto_com[count] == lotto_com[i]){
					lotto_com[i] = r.nextInt(45) + 1;
					count = -1;
				}
			}
		}
		for(i = 0; i < lotto_user.length; i++){
			System.out.print("원하는 " + (i+1) + "번째 로또 숫자를 입력하세요.  ");
			user = s.nextInt();
			for(count = 0; count < i; count++){
				if(user < 0 && user > 46){
					System.out.println("잘못 입력하셨습니다.");
					i--;
					break;
				}else if(lotto_user[count] == user){
					System.out.println("잘못 입력하셨습니다.");
					i--;
					count = -1;
				}else{
					lotto_user[i] = user;
				}
			}
		}
	}
	public static void main(String[] args) {
		H03 t = new H03();
		t.run();
	}
}
