package lab_08_02;

public class SynchronizedEx {
	public static void main(String[] args) {
		SharedPrinter p = new SharedPrinter();
		int[] one = {1, 2, 3, 4, 5, 6, 7, 8};
		int[] ten = {10, 20, 30, 40, 50};
		int[] hundread = {100, 200, 300};
		
		Thread th1 = new WorkerThread(p, one);
		Thread th2 = new WorkerThread(p, ten);
		Thread th3 = new WorkerThread(p, hundread);
		
		th1.start();
		th2.start();
		th3.start();
	}
}

class SharedPrinter {
	synchronized void print(int num){
		for(int i = 0; i < num.length(); i++){
			System.out.print(num.intAt(i));
			System.out.println();
		}
	}
}

class WorkerThread extends Thread{
	SharedPrinter p;
	int [] num;
	WorkerThread(SharedPrinter p, int[] num){
		this.p = p;
		this.num = num;
	}
	public void run(){
		for(int i = 0; num.length; i++){
			p.print(num[i]);
		}
	}
}
