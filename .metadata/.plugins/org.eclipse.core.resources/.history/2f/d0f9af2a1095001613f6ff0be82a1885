package midtestpractice2;

import java.util.Scanner;

public class BankAccount{
	int account_num = 0;
	String name;
	int account_amount = 0;
	int credit = 0;
	Scanner s = new Scanner(System.in);
	public BankAccount(int an, String n, int aa, int c){
		account_num = an;
		name = n;
		account_amount = aa;
		credit =c;
	}
	void save(){
		int save;
		System.out.println("입금 할 금액을 입력해 주세요.");
		save = s.nextInt();
		account_amount += save;
	}
	void draw(){
		int draw;
		System.out.println("출금 할 금액을 입력해 주세요.");
		draw = s.nextInt();
		account_amount -= draw;
	}
	void printAccount(){
		System.out.println(account_num + name + credit + account_amount);
	}
	void getAmount(){
		System.out.println("현재 통자의 잔액은 " + account_amount + "원 입니다.");
	}
}
}
