package step_G;

import java.util.Scanner;

public class G06 {
	void run(){
		Scanner s = new Scanner(System.in);
		int[] order = {0, 0, 0};//입력받는 구매 제품 개수(가죽장갑, 털장갑, 비닐장갑)
		int[] total_order = {0, 0, 0};//총 판매 개수(가죽장갑, 털장갑, 비닐장갑)
		int sale;//매출액
		int total_sale;//총 매출액
		int[] price = {10000, 6000, 3000};//제품별 가격
		int i;
		System.out.println("세 종류의 제품이 있습니다.");
		System.out.println("(1.가죽장갑 1만원,  2.털장갑 6천원,  3.비닐장갑 3천원)");
		System.out.println();
		
		for(i = 0; i < order.length; i++){
			System.out.println((i+1) + "번 제품은 몇개를 구입하실래요?");
			order[i] = s.nextInt();
			sale += order[i] * price[i];
		}
	}
	public static void main(String[] args) {
		G06 t = new G06();
		t.run();
	}
}
