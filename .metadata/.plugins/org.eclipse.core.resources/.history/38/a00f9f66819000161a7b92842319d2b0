package student_information_management;

import java.util.ArrayList;

public class StudentManager extends Student{
	int select = 0;
	int student_count = 0;
	int i = 0;
	String trueorfalse = "";
	String yesorno = "";
	String search = "";
	ArrayList<Student> mylist = new ArrayList<Student>();
	public StudentManager(String name, String studentid, String gender, String address, String tel, String backtoschool){
		super(name, studentid, gender, address, tel, backtoschool);
	}
	void input(){
		System.out.println("---------------------------------------------------------------");
		System.out.print("1)학생등록  2)정보수정  3)삭제  4)리스트  5)이름검색  6)복학생리스트  7)주소검색  8)종료  ==> ");
		select = s.nextInt();
		System.out.println("---------------------------------------------------------------");
	}
	void student_regist(){
		System.out.print("학생이름, 학번, 성별을 입력하세요 : ");
		setName(s.next());
		setStudentid(s.next());
		setGender(s.next());
		System.out.print("주소를 입력하세요 : ");
		setAddress(s.nextLine());
		System.out.println();
		System.out.print("전화번호를 입력하세요 : ");
		setTel(s.next());
		System.out.print("복학생입니까?(Y/N) ");
		setBacktoschool(s.next());
		Student stu = new Student(getName(), getStudentid(), getGender(), getAddress(), getTel(), getBacktoschool());
		mylist.add(stu);
		student_count++;
		System.out.println("총 " + student_count + "명이 등록되었습니다.");
	}
	void student_modify(){
		System.out.println("번호	이름	학번	성별	주소	전화번호	복학생");
		for(i = 0; i < student_count; i++){
			System.out.println(i+1 + "	" + mylist.get(i));
		}System.out.print("==> 수정하실 번호를 입력하세요 : ");
		i = s.nextInt();
		mylist.remove(i-1);
		System.out.print("학생이름, 학번, 성별을 입력하세요 : ");
		setName(s.next());
		setStudentid(s.next());
		setGender(s.next());
		System.out.print("주소를 엽력하세요 : ");
		setAddress(s.next());
		System.out.print("전화번호를 입력하세요 : ");
		setTel(s.next());
		System.out.print("복학생입니까?(Y/N) ");
		setBacktoschool(s.next());
		Student stu = new Student(getName(), getStudentid(), getGender(), getAddress(), getTel(), getBacktoschool());
		mylist.add(i-1, stu);
		System.out.println("수정되었습니다.");
	}
	void student_delete(){
		System.out.println("번호	이름	학번	성별	주소	전화번호	복학생");
		for(i = 0; i < mylist.size(); i++){
			System.out.println(i+1 + "	" + mylist.get(i));
		}System.out.print("삭제하실 번호를 입력하세요 : ");
		i = s.nextInt();
		System.out.print("정말로 삭제하시겠습니까?(Y/N) ");
		yesorno = s.next();
		if(yesorno.equals("Y")){
			mylist.remove(i-1);
			student_count--;
			System.out.println("삭제되었습니다.");
		}
	}
	void student_list(){
		System.out.println("이름	학번	성별	주소	전화번호	복학생");
		for(i = 0; i < mylist.size(); i++){
			System.out.println(mylist.get(i));
		}
	}
	void search_name(){
		System.out.println("검색하실 이름을 입력하세요 : ");
		search = s.next();
		System.out.println("검색되었습니다.");
		System.out.println("번호	이름	학번	성별	주소	전화번호	복학생");
		for(i = 0; i < mylist.size(); i++){
			if(mylist.get(i).getName().contains(search)){
				System.out.println((i+1) + "	" + mylist.get(i));
			}
		}
	}
	void backtoschool(){
		int count = 0;
		System.out.println("번호	이름	학번	성별	주소	전화번호	복학생");
		search = getBacktoschool();
		for(i = 0; i < mylist.size(); i++){
			if(mylist.get(i).getBacktoschool().contains("Y")){
				System.out.println((i+1) + "	" + mylist.get(i));
				count++;
			}
		}
		System.out.println("복학생은 " + count + "명 입니다.");
	}
	void search_address(){
		System.out.println("검색하실 이름을 입력하세요 : ");
		search = s.next();
		System.out.println("번호	이름	학번	성별	주소	전화번호	복학생");
		for(i = 0; i < mylist.size(); i++){
			if(mylist.get(i).getAddress().contains(search)){
				System.out.println((i+1) + "	" + mylist.get(i));
			}
		}
	}
	void start(){
		boolean go = true;
		while(go){
			input();
			switch(select){
			case 1 :
				student_regist();
				break;
			case 2 :
				student_modify();
				break;
			case 3 :
				student_delete();
				break;
			case 4 :
				student_list();
				break;
			case 5 :
				search_name();
				break;
			case 6 :
				backtoschool();
				break;
			case 7 :
				search_address();
				break;
			case 8 :
				go = false;
				System.out.println("종료되었습니다.");
				break;
			}
		}
	}
}
