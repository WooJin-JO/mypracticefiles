package step_G;

import java.util.Scanner;

public class G03 {
	void run(){
		Scanner s = new Scanner(System.in);
		int[][] jumsu = new int[5][3];
		int[] c_average = new int[3];
		String[] dass_name = {"국어", "영어", "수학"};
		int kor = 0;
		int eng = 0;
		int mat = 0;
		int sum = 0;
		int average = 0;
		int grade = 0;
		int i = 0;
		int j = 0;
		for(i = 0; i < 5; i++){
			System.out.print((i+1) + "번 학생의 국어, 영어, 수학 점수는? ");
			kor = s.nextInt();
			eng = s.nextInt();
			mat = s.nextInt();
			jumsu[i][0] = kor;
			jumsu[i][1] = eng;
			jumsu[i][2] = mat;
			for(j = 0; j < 3; j++){
				c_average[j] += jumsu[i][j];
				sum += jumsu[i][j];
				average = sum / 3;
			}
			if(average >= 90){
				grade = 'A';
			} else if(average >= 80){
				grade = 'B';
			} else if(average >= 70){
				grade = 'C';
			} else if(average >= 60){
				grade = 'D';
			} else {
				grade = 'F';
		}
		for(i = 0; i < 3; i++){
			System.out.println("1) 각 과목별 총점과 평균 점수");
			System.out.println(dass_name[i] + " 과목 총점은 " + c_average[i] + " 평균은 " + c_average[i] / 3 + "입니다.");
			System.out.println();
		}
		for(i = 0; i < 5; i++){
			System.out.println("2) 각 학생별 총점과 평균 점수");
			System.out.println((i+1) + "번 학생 점수 : 총점 " + sum + ", 평균 " + average + ", 등급 " + grade);
			}
		}
	}
	public static void main(String[] args) {
		G03 t = new G03();
		t.run();
	}
}
