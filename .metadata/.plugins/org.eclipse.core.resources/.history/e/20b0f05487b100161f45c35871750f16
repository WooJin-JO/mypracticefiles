package step_G;

import java.util.Scanner;

public class G05 {
	void run(){
		Scanner s = new Scanner(System.in);
		int hour = 1;
		int minute = 1;
		int charge;
		int total_charge;
		while(hour != 0 && minute != 0){
			System.out.print("사용한 시간을  시간과 분으로 입력하세요. : ");
			hour = s.nextInt();
			minute = s.nextInt();
			if(minute <= 30){
				charge = 2 * hour * 1000 + 1000;
			}else if(minute < 60){
				charge = 2 * hour * 1000 + 2000;
			}
		}
	}
	public static void main(String[] args) {
		G05 t = new G05();
		t.run();
	}
}
