package practice;

import java.util.Scanner;
import java.io.*;
public class Ex {
	public static void main(String[] args) throws IOException {
		FileWriter fr = null;
		String str = null;
		Scanner s = new Scanner(System.in);
		try{
			fr = new FileWriter("phone_book.txt");
		}
		catch(Exception e){
			e.printStackTrace();
			}
		while(true){
			try{
				System.out.print("이름 , 주소, 전화번호를 입력하시오(구분은 빈칸으로 합니다.) : ");
				str = s.nextLine();
				fr.write(str);
			}
			catch(Exception e){
				e.printStackTrace();
				}
			if(str.length() == 0)
				break;
			System.out.println("입력 문자열 = " + str);
		}
		fr.close();
		s.close();
	}
}

